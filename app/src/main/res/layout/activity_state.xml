<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/stateContainer"
    android:layout_height="match_parent"
    tools:context=".StateActivity">


    <Button
        android:id="@+id/screenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="屏幕" />

    <Button
        android:id="@+id/photoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="摄像头"
        app:layout_constraintLeft_toRightOf="@id/screenButton" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="447dp"
        android:orientation="horizontal"
        android:id="@+id/imgViewContainer"
        app:layout_constraintTop_toBottomOf="@id/screenButton"
       ></LinearLayout>
</android.support.constraint.ConstraintLayout>